mixin section-header(title)
  div(class="section-header")&attributes(attributes)
    h2(class="section-header__title")=title

mixin main-slider-swiper(id, ...items)
  // begin Main Slider Swiper
  div(id=id class="main-slider-swiper swiper-container")
    div.swiper-wrapper
      each item in items
        div(class="swiper-slide")
          img(src=item alt="" class="main-slider-swiper__item-image")

    div(class="main-slider-swiper__button-next swiper-button-next icon-angle-right")
    div(class="main-slider-swiper__button-prev swiper-button-prev icon-angle-left")
    div(class="main-slider-swiper__pagintaion swiper-pagintaion")
  // end Main Slider Swiper

